@model Assignment3.Models.ActorTweetsVM

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Actor</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Actor.Name)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Actor.Name)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Actor.Gender)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Actor.Gender)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Actor.Age)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Actor.Age)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Actor.IMDBurl)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Actor.IMDBurl)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Actor.Photo)
        </dt>
        <dd class = "col-sm-10">
             @if (Model.Actor.Photo != null)
            {
                <img width="100" height="100" src="@Url.Action("GetActorPhoto", "Actors", new {Model.Actor.Id})" />
            }
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model?.Actor.Id">Edit</a> |
    <a asp-action="Index">Back to List</a>
</div>


<h1>Tweets</h1>

<p>Overall Score: @Model.CompoundSentiment()</p>

<table id="" class="">
<thead>
    <tr>
        <th>
                @Html.DisplayNameFor(model => model.ActorResults[0].Tweet )
        </th>
        <th>
                @Html.DisplayNameFor(model => model.ActorResults[0].Sentiment )
        </th>
    </tr>
</thead>
<tbody>
        @foreach (var item in Model.ActorResults)
        {
                <tr>
                    <td>@item.Tweet</td>
                    <td>@item.Sentiment</td>
                </tr>
        }
    </tbody>
</table>
